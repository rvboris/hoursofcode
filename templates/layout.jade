        button.ascensorLink.ascensorLink4.portfolio Портфолио
        button.ascensorLink.ascensorLink5.contact Контакты
  
    #ascensorBuilding
      section.blog-section
        .container
          block blogSection
            header
              .row
                div.col.headline
                  h1 HoursOfCode
              .row
                .col.subline
                  h2 Блог
                  a(href='/feed.xml').icon-social-RSS
            section.content
            include main-footer
      section.post-section
        .container
          header
            .row
              div.col.headline
                h1 HoursOfCode
            .row
              .col.subline
                h2 Блог
                a(href='/feed.xml').icon-social-RSS
          block postSection
            section.content
          include main-footer
      section.archive-section
