- var posts = _.chain(contents.posts._.directories).map(function(post) { return post['data.json'] }).sortBy(function(post) { return -moment(post.metadata.date, 'DD/MM/YYYY').unix() }).value();

doctype xml
rss(version='2.0',
    xmlns:content='http://purl.org/rss/1.0/modules/content/',
    xmlns:wfw='http://wellformedweb.org/CommentAPI/',
    xmlns:dc='http://purl.org/dc/elements/1.1/'
    xmlns:atom='http://www.w3.org/2005/Atom')
  channel
    title= locals.name
    atom:link(href=locals.url + '/feed.xml', rel='self', type='application/rss+xml')
    link= locals.url
    description= locals.description
    pubDate= moment(posts[0].metadata.date, 'DD/MM/YYYY').format('ddd, DD MMM YYYY HH:mm:ss ZZ')
    language ru
    each post in posts
      - var permalink = locals.url + '/' + path.dirname(post.filename).replace(path.sep, '/') + '/';
      item
        title= post.metadata.title
        link= permalink
        pubDate= moment(post.metadata.date, 'DD/MM/YYYY').format('ddd, DD MMM YYYY HH:mm:ss ZZ')
        guid(isPermaLink='true')= permalink
        author= locals.owner
        description= post.metadata.shortText